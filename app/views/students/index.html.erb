<div class="row">
    <div class="col s12">
        <h3 class="center-align">Estudantes</h3>
    </div>
</div>

<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text conteudo-curso">
          <span class="card-title">Nome: <%= student.name.truncate(35) %></span>
          <p>Email: <%= student.email.truncate(25) %></p>
          <p>Cursos matriculados</p>
        </div>
        <div class="card-action">
          <a href="#">Ver Perfil</a>
        </div>
      </div>
    </div>
  <% end %>  
</div>