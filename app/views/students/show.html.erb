<div class="row">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Nome: <%= @student.name.truncate(50) %></span>
        <% if @student == current_user %>
          <p>Email: <%= @student.email.truncate(50) %></p>
        <% end %>
        <p style="margin-top: 15px; margin-bottom: -18px;">
          Cursos matriculados: 
          <% if @student.courses.empty? %>
            <br>Nenhum no momento...
          <% else %>
            <ul>
              <% @student.courses.each do |course| %>
                <li>- <%= course.name %></li>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
    </div>
    <%= link_to '<i class="material-icons right">create</i>Editar Perfil'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" if @student == current_user %>
  </div>
</div>