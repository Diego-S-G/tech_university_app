<div class="row">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text conteudo-curso">
        <span class="card-title">Nome: <%= @student.name.truncate(50) %></span>
        <p>Email: <%= @student.email.truncate(50) %></p>
        <p>Cursos matriculados</p>
      </div>
    </div>
    <%= link_to '<i class="material-icons right">create</i>Editar Perfil'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
  </div>
</div>